<div class="header">
  <h1>CityIQ</h1>
</div>


<div class="container">

  <div id="left-box">
    <h2>Where is this?</h2>
  </div>

  <div id="main-img">
    <img src= <%= session[:urls][session[:pic_num]] %>>
  </div>

</div>

<div class="footer">

  <form action="/games/<%= session[:game_id] %>/guess" method="POST">
    <input type="text" name="question[:guess]" placeholder="Write Your Guess Here">
    <input type="submit" value="Guess">
  </form>

  <form action="/games/<%= session[:game_id] %>/next_clue" method="GET">
    <input type="submit" value="Next Clue">
  </form>

</div>

